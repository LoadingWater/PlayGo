<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    tools:backgroundTint="@color/darkBlue"
    android:background="@drawable/rounded_search_view"
    android:layout_margin="5dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/authorReplyItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_outline_account_circle_24_white"
        android:gravity="center_vertical"
        android:text="Author name"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/bodyReplyItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="sdfasdffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/likesReplyItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorReplyItem" />

    <TextView
        android:id="@+id/likesReplyItem"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_baseline_thumb_up_24_filled_yellow"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/darkYellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_baseline_reply_24_filled_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/likesReplyItem" />

    <TextView
        android:id="@+id/dateReplyItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/likesReplyItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/likesReplyItem" />


</androidx.constraintlayout.widget.ConstraintLayout>